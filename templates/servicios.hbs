<html>
 <head>
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
        <!-- Bootstrap Font Icon CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
        <!-- Fuente a usar -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro">

        <link rel="stylesheet" href="/style.css"> 

        <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
        <meta name="viewport" content="width=device-width, initial-scale=1">

        {{> headerHead }}
    </head>
<body class="empresa-body">
    {{> header }}
    
    <h2 class="servicio-titulo">Servicios</h2>
        <div class="container-sm">
            <div class="row" style="--bs-gutter-x: 2rem; --bs-gutter-y: 2rem;">
                {{#each servicios}}
                <div class="col-4">
                    <div class="servicio-card">
                        <a href="/empresas?servicio={{this.nombre}}">
                            <div style="text-align:center">
                                <i class="{{this.icono}} servicio-img pt-5" aria-hidden="true"></i>
                            </div>
                        </a>     
                        <h4 style="text-align:center; padding: 20px 35px;">{{this.nombre}}</h4>
                    </div>
                </div>
                {{/each}}
            </div>
            <br/>
        </div>

</body>
</html>