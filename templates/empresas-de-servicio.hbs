<!doctype html>

<head>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  <!-- Bootstrap Font Icon CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
  <!-- Fuente a usar -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro">

  <link rel="stylesheet" href="/style.css">

  <meta name="viewport" content="width=device-width, initial-scale=1">
  {{> headerHead }}

</head>

<body class="empresa-body">
  {{>header}}
  <div class="container">
    <h2 class="my-5">Empresas De Servicio "{{ servicio.nombre }}"</h2>
    <div class="row" style="margin-top:20px">
      <div class="col-12 col-md-3">
        <h4 class="text-left">Servicios</h4>
      </div>
      <div class="col-12 col-md-9">
        <div class="input-group mb-3">
          <form action="empresas" action="GET" class="form-inline">
            <div class="row"  style="--bs-gutter-x: 0.5rem">
              <div class="col-lg-11">
                <input type="text" name="search" class="form-control" placeholder="Buscar por nombre..." aria-label="Buscar" aria-describedby="button-buscar">
              </div>
              <div class="col-lg-1">
                 <input type="submit" value="Buscar" class="btn btn-outline-secondary"></input>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-12 col-sm-6 col-md-3 mb-3">
        <div>
          {{#each servicios}}
          <a class="d-block py-1 empresa-servicio-list-item"
            href="/empresas?servicio={{this.nombre}}">{{this.nombre}}</a>
          {{/each}}
        </div>
      </div>

      <div class="col-12 col-sm-6 col-md-9">
        <div class="row text-center">
          {{#if (isNotNull pageError)}}
             <h2>{{pageError}}</h2>
          {{/if}}
          {{#each empresas}}
            <div class="col-12 col-md-6 mt-3">
              <div class="p-5 empresa-card">
                <a href="/empresa/{{this.nombre}}" style="text-decoration: none; color: #f9f9fa">
                {{!-- <img src="{{this.logo}}" class="img-fluid" style="max-height: 300px"> --}}
                <img src="https://e7.pngegg.com/pngimages/118/341/png-clipart-graphics-logo-graphic-design-high-tech-creative-design-technology.png" class="img-fluid empresa-img">
                  <h3 class="mt-4">{{this.nombre}}</h3>
                </a>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
    integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous"></script>
</body>

</html>