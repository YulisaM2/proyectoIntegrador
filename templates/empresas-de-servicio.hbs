    <body class="empresa-body">
        {{> header }}
        <div class="container">
            <h1>Empresas De Servicio "{{ servicio.nombre }}"</h1>

            <div class="d-flex bd-highlight mb-3">
                <nav class="nav flex-column servicios-sidebar" style="border: solid; border">
                    {{#each servicios}}
                     <a class="nav-link mb-3" style="color: gray; border-bottom: solid; border-color: white" href="/empresas?servicio={{this.nombre}}">{{this.nombre}}</a>
                    {{/each}}
                </nav>
            </div>
        
                {{#each empresas}}
                    <div class="col-sm-6 bd-highlight">
                        <img src="/img/servicios/{{servicio.icono}}">
                        <h2>{{this.nombre}}</h2>
                    </div>
                {{/each}}
                <div class="col-sm-6 bd-highlight">
                        <img src="/img/servicios/{{servicio.icono}}">
